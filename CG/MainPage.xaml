<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CG.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome Page" HorizontalTextAlignment="Center" 
                   TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start messaging" TextColor="Black"
               HorizontalTextAlignment="Center"
               FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="PhoneNumber" Keyboard="Telephone"/>
        <Button Text="Log In" Margin="20" 
                Padding="10" BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="20"
                Clicked="Button_Clicked"
                />
        <Label Text="Have no account? " Margin="10" 
               TextColor="Black" FontSize="18"
               HorizontalTextAlignment="Center"
               />
        <Button Text="Create New Account" Margin="20"
                Padding="10" BackgroundColor="#42b72a"
                TextColor="White"
                CornerRadius="20"
                Clicked="RegistrBtnClick"/>
    </StackLayout>

</ContentPage>
