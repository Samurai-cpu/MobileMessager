<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CG.RegistrPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
            <Label Text="Registration" HorizontalTextAlignment="Center" 
                   TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Placeholder="Email" />
        <Entry Placeholder="Login" />
        <Entry Placeholder="PhoneNumber" Keyboard="Telephone"/>
        <Button Text="Back" Margin="20" 
                Padding="10" BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="20"
                Clicked="BackBtnClick"
                />
    </StackLayout>
</ContentPage>